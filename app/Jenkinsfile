pipeline {
    agent any
    
    stages {
        stage('Checkout Code') {
            steps {
                echo '1. ðŸ“¥ Cloning code from GitHub'
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            steps {
                echo '2. ðŸ“¦ Installing npm packages'
                sh 'npm install'
            }
        }
        
        stage('Run Tests') {
            steps {
                echo '3. ðŸ§ª Running test suite'
                sh 'npm test || echo "Tests completed"'
            }
        }
        
        stage('Build & Deploy') {
            steps {
                echo '4. ðŸš€ Building and deploying'
                sh 'echo "Application deployed successfully!"'
            }
        }
    }
    
    post {
        always {
            echo 'ðŸ“Š Pipeline execution finished'
        }
    }
}
